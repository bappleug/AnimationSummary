<?xml version="1.0" encoding="utf-8"?>
<io.amosbake.animationsummary.draggviewhelper.DraggableContainerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loDragger"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:flexDirection="column"
    app:flexWrap="wrap"
    app:alignItems="center">

    <TextView
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#44ff0000"
        android:text="I can't move out of parent layout !"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#44ff0000"
        android:text="I am above all !"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#44ff0000"
        android:text="I can't be captured !"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#44ff0000"
        android:text="I will hold my position"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <TextView
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#44ff0000"
        android:text="I can be captured from left edge !"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <Button
        android:id="@+id/btnText6"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="12dp"
        android:text="I am a draggable button"
        android:layout_width="120dp"
        android:layout_height="80dp"/>

    <TextView
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Call requestLayout() will restore all the view to the original layout:"/>

    <Button
        android:id="@+id/btnText7"
        android:layout_margin="4dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="call requestLayout()"
        android:textSize="12dp"
        android:layout_width="120dp"
        android:layout_height="80dp"/>

    <TextView
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text=
            "To avoid this, you have to record the position of each draggable view, then override onLayout() and call layout() to each draggable view with there dragged position."/>
</io.amosbake.animationsummary.draggviewhelper.DraggableContainerLayout>